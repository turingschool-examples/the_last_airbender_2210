<h2>Members of <%= @nation.gsub!("+", " ").capitalize %></h2>


<h3>Total population: <%= @all_members.count %></h3>

<ol id='member'>
  <% @twenty_five_members.each do |member| %>
    <li><p><b>Name:</b> <%= member.name %></li>
    <p><img src = <%= member.photo %>>
    <p><b>Allies:</b> <% if member.allies.nil? %> 
                        <%= "None" %>
                      <% else %>
                        <%= member.allies %>
                      <% end %>
    <p><b>Enemies:</b> <% if member.enemies.nil? %> 
                        <%= "None" %>
                      <% else %>
                        <%= member.enemies %>
                      <% end %>
    <p><b>Affiliations:</b> <%= member.affiliation %>
  <% end %>
 </ol> 